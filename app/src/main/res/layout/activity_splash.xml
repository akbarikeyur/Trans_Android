<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white_background"
    android:gravity="center">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgv_logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_200sdp"
            android:src="@drawable/logo" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/fl_arrive_depart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp">

                <ImageView
                    android:id="@+id/imgv_depart"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="left"
                    android:src="@drawable/placeholder" />


                <ImageView
                    android:id="@+id/imgv_arrive"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="right|bottom"
                    android:src="@drawable/placeholder" />
            </FrameLayout>

            <FrameLayout
                android:layout_gravity="bottom"
                android:id="@+id/fl_bus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgv_bus"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="left"
                    android:src="@drawable/bus" />
            </FrameLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_arrive_depart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_3sdp"
                android:background="@drawable/drawable_round_corner_black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">

                <TextView
                    android:id="@+id/txt_depart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/depart"
                    android:textColor="@color/black_font"
                    android:textSize="@dimen/txt_lbl" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_weight="1" />

                <TextView
                    android:alpha="0"
                    android:id="@+id/txt_arrive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/arrive"
                    android:textColor="@color/black_font"
                    android:textSize="@dimen/txt_lbl" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
