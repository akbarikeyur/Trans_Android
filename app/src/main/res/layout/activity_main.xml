<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_lauout_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="@color/white_background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_topbar_long" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/_10sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/header_image_padding">

                <ImageView
                    android:id="@+id/imgv_menu"
                    android:layout_width="@dimen/header_image"
                    android:layout_height="@dimen/header_image"
                    android:layout_gravity="left|top"
                    android:paddingTop="@dimen/header_image_padding"
                    android:paddingRight="@dimen/header_image_padding"
                    android:paddingBottom="@dimen/header_image_padding"
                    android:src="@drawable/menu" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:text="@string/search_bus"
                android:textColor="@color/white_font"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_50sdp"
                android:paddingRight="@dimen/_50sdp">

                <android.support.design.widget.TabLayout
                    android:id="@+id/vpgr_tab"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/drawable_round_corner_white"
                    android:clipToPadding="false"
                    app:tabIndicatorHeight="0dp"
                    app:tabSelectedTextColor="@color/white_font"
                    app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
                    app:tabTextColor="@color/black_font" />
            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/vpgr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:overScrollMode="never"
                android:scrollIndicators="none"
                android:scrollbars="none" />

            <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingBottom="@dimen/_10sdp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:cardUseCompatPadding="true">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        android:overScrollMode="never"
                        android:scrollIndicators="none"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingTop="@dimen/_10sdp"
                            android:paddingRight="@dimen/_20sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/ll_from"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:paddingBottom="@dimen/_5sdp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/_10sdp"
                                        android:text="@string/from"
                                        android:textColor="@color/black_font"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_from_city"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:textColor="@color/red_font"
                                        android:textSize="@dimen/txt_lbl"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_from_country"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:textColor="@color/black_font"
                                        android:textSize="@dimen/_11sdp" />

                                </LinearLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_weight="1" />

                                <LinearLayout
                                    android:id="@+id/ll_to"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/_10sdp"
                                        android:text="@string/to"
                                        android:textColor="@color/black_font"
                                        android:textSize="@dimen/_10sdp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_to_city"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:textColor="@color/red_font"
                                        android:textSize="@dimen/txt_lbl"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/txt_to_country"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:textColor="@color/black_font"
                                        android:textSize="@dimen/_11sdp" />

                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:alpha="0.1"
                                android:background="@color/black_line" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_7sdp"
                                android:paddingBottom="@dimen/_7sdp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingRight="@dimen/_10sdp"
                                            android:text="@string/depart"
                                            android:textColor="@color/black_font"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold" />

                                        <ImageView
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:padding="@dimen/_4sdp"
                                            android:src="@drawable/calendar" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/txt_depart_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:textColor="@color/red_font"
                                        android:textSize="@dimen/txt_lbl" />

                                    <TextView
                                        android:id="@+id/txt_depart_day"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:textColor="@color/black_font"
                                        android:textSize="@dimen/_11sdp" />

                                </LinearLayout>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/_1sdp"
                                    android:layout_weight="1" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:paddingRight="@dimen/_10sdp"
                                            android:text="@string/returnn"
                                            android:textColor="@color/black_font"
                                            android:textSize="@dimen/_10sdp"
                                            android:textStyle="bold" />

                                        <ImageView
                                            android:layout_width="@dimen/_20sdp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:padding="@dimen/_4sdp"
                                            android:src="@drawable/calendar" />

                                    </LinearLayout>


                                    <TextView
                                        android:id="@+id/txt_return_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:textColor="@color/red_font"
                                        android:textSize="@dimen/txt_lbl"
                                        android:visibility="gone" />

                                    <TextView
                                        android:id="@+id/txt_round_trip"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:alpha="0.5"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:text="@string/book_round_trip"
                                        android:textColor="@color/black_font"
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:id="@+id/txt_return_day"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:textColor="@color/black_font"
                                        android:textSize="@dimen/_11sdp"
                                        android:visibility="gone" />


                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:alpha="0.1"
                                android:background="@color/black_line" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingTop="@dimen/_7sdp"
                                android:paddingBottom="@dimen/_7sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingRight="@dimen/_10sdp"
                                    android:text="@string/how_many_seat"
                                    android:textColor="@color/black_font"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:orientation="vertical"
                                    android:paddingRight="@dimen/_10sdp">

                                    <ImageView
                                        android:id="@+id/imgv_up"
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:padding="@dimen/_3sdp"
                                        android:rotation="180"
                                        android:src="@drawable/arrow_down" />

                                    <TextView
                                        android:id="@+id/txt_seat"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="00"

                                        android:textColor="@color/red_font"
                                        android:textSize="@dimen/_15sdp"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:id="@+id/imgv_down"
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:padding="@dimen/_3sdp"
                                        android:src="@drawable/arrow_down" />
                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:alpha="0.1"
                                android:background="@color/black_line" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="@dimen/_5sdp"
                                    android:src="@drawable/ic_specialneeds" />

                                <FrameLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/txt_special_need"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:paddingTop="@dimen/_5sdp"
                                        android:paddingBottom="@dimen/_5sdp"
                                        android:text="@string/special_need"
                                        android:textColor="@color/red_font"
                                        android:textSize="@dimen/txt_lbl" />

                                    <TextView
                                        android:id="@+id/txt_disabality"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="bottom"
                                        android:textColor="@color/grey_verification"
                                        android:textSize="@dimen/txt_lbl" />
                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">

                                    <ImageView
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_gravity="center"
                                        android:padding="@dimen/_4sdp"
                                        android:rotation="180"
                                        android:src="@drawable/back" />

                                    <ImageView
                                        android:id="@+id/imgv_cancel"
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_gravity="bottom"
                                        android:paddingTop="@dimen/_5sdp"
                                        android:src="@drawable/cancel" />
                                </FrameLayout>


                                <View
                                    android:layout_width="@dimen/_10sdp"
                                    android:layout_height="@dimen/_1sdp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp">

                                <TextView
                                    android:id="@+id/txt_search_bus"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/drawable_round_corner_red"
                                    android:gravity="center"
                                    android:padding="@dimen/_7sdp"
                                    android:text="@string/search_bus"
                                    android:textColor="@color/white_font"
                                    android:textSize="@dimen/txt_btn" />
                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>


    </FrameLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nvViewList"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/maroon"
        android:paddingTop="@dimen/_20sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingTop="@dimen/_25sdp"
                android:paddingBottom="@dimen/_10sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgv_user"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:src="@drawable/no_profile" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/txt_usr_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/white_font"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/txt_usr_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:textColor="@color/white_font"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:padding="@dimen/_2sdp"
                            android:id="@+id/imgv_wallet"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@drawable/wallet" />

                        <TextView
                            android:text="$0"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:id="@+id/txt_wallet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:textColor="@color/white_font"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingTop="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_white_bus_with_line" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/black_background" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:overScrollMode="never"
                android:scrollIndicators="none"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_10sdp">

                    <ListView
                        android:id="@+id/lstview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="@dimen/_25sdp"
                        android:footerDividersEnabled="false"
                        android:listSelector="@android:color/transparent"
                        android:overScrollMode="never"
                        android:padding="@dimen/_20sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:scrollIndicators="none"
                        android:scrollbars="none" />


                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>