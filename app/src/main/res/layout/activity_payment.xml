<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    android:orientation="vertical">

    <include layout="@layout/header_small_ic_top_bar_with_1_title" />


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_wallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/_30sdp">

        <ImageView
            android:alpha="0.8"
            android:id="@+id/imgv_wallet"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:src="@drawable/wallet" />

        <TextView
            android:alpha="0.8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Wallet Balance"
            android:textColor="@color/grey_verification"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/txt_wallet_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_font"
            android:gravity="center"
            android:paddingBottom="@dimen/_20sdp"
            android:text="$200"
            android:textColor="@color/black_font"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

        <View
            android:background="@drawable/drawable_gradiant_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/drawable_round_corner_line_red_10dp"
            android:orientation="horizontal"
            android:padding="@dimen/_3sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="$"
                android:textColor="@color/grey_font"
                android:textSize="@dimen/_13sdp" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/red_line" />

            <TextView
                android:id="@+id/edt_payment"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:textColor="@color/black_font" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp" />

        <TextView
            android:gravity="center"
            android:text="Pay Now"
            android:textSize="@dimen/txt_btn"
            android:layout_gravity="center_horizontal"
            android:id="@+id/txt_pay"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_round_corner_red"
            android:padding="@dimen/_9sdp"
            android:textColor="@color/white_font" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_paypal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingTop="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="@string/how_would_pay"
            android:textColor="@color/black_font"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingBottom="@dimen/_20sdp"
            android:text="@string/choose_pay_option"
            android:textColor="@color/grey_verification"
            android:textSize="@dimen/_11sdp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.5"
            android:background="@color/black_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/_20sdp">

            <ImageView
                android:id="@+id/imgv_paypal"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_40sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/paypal" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>