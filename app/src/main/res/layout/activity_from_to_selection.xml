<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/header_elevation">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_topbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgv_back"
                android:layout_width="@dimen/header_image"
                android:layout_height="@dimen/header_image"

                android:padding="@dimen/header_image_padding"
                android:src="@drawable/back" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_7sdp"
                    android:textColor="@color/white_font"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/edt_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/drawable_round_corner_white"
                    android:hint="Search City"
                    android:inputType="text"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:singleLine="true"
                    android:textColor="@color/black_font"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imgv_info"
                android:layout_width="@dimen/header_image"
                android:layout_height="@dimen/header_image"
                android:padding="@dimen/header_image_padding"
                android:src="@drawable/info"
                android:visibility="invisible" />
        </LinearLayout>


    </FrameLayout>

    <TextView
        android:paddingTop="@dimen/_20sdp"
        android:gravity="center"
        android:layout_gravity="top"
        android:id="@+id/txt_no_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No city found"
        android:textColor="@color/grey_font"
        android:textSize="@dimen/_13sdp" />

    <ListView
        android:id="@+id/lstv_from_to"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:overScrollMode="never"
        android:padding="@dimen/_10sdp"
        android:scrollIndicators="none"
        android:scrollbars="none" />

</LinearLayout>